---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import Toolbox from "@/assets/toolbox.webp";

// Components
import SocialsBar from "@/components/SocialsBar.astro";
import NavBar from "@/components/NavBar.astro";

// Icons
import Arrow from "@/icons/Arrow.astro";
---

<Layout title="Dev Toolbox" hideContent={true}>
	<NavBar />
	<SocialsBar />

	<h1 class="text-center text-[1.8rem] sm:text-[2.5rem] md:text-[2.8rem] lg:text-[3rem] pt-3 sm:pt-4 md:pt-5 lg:pt-6 text-white font-bold uppercase">
		The <span
			class="bg-gradient-electric bg-clip-text text-transparent text-[2.1rem] sm:text-[3rem] md:text-[3.4rem] lg:text-[3.8rem]"
			>best</span
		> dev <span
			class="bg-gradient-electric bg-clip-text text-transparent text-[2.1rem] sm:text-[3rem] md:text-[3.4rem] lg:text-[3.8rem]"
			>toolbox</span
		>
	</h1>
	<Image
		src={Toolbox}
		alt="Toolbox"
		class="w-38 mt-3 sm:w-44 sm:mt-2 md:w-52 md:mt-1 lg:w-56 lg:mt-0 object-contain mx-auto relative z-98"
	/>

	<article class="pb-0 pt-4 sm:pt-5 md:pt-5.5 lg:pt-6 flex justify-center flex-col items-center gap-2 md:gap-2.5 lg:gap-2">
		<h2 class="text-blue-text font-semibold text-[1.35rem] sm:text-[1.38rem] md:text-[1.42rem] lg:text-[1.4rem] text-center">
			Power your next project.
		</h2>
		<p class="text-center text-white w-full sm:w-[70%] md:w-[60%] lg:w-[50%] mx-auto text-[0.95rem] sm:text-[1.05rem] md:text-[1.15rem] lg:text-[1.2rem] text-pretty px-4 sm:px-0">
			Explore the developer toolkit, from icon packs and background generators to essential libraries and much more.
		</p>
		<a
			href="/categories"
			class="py-2 px-3 sm:py-2.5 sm:px-4 md:py-2.5 md:px-4.5 lg:py-3 lg:px-5 mt-1 sm:mt-1.5 md:mt-1.5 lg:mt-1 mx-auto bg-purple-300 rounded-md text-white font-medium text-lg sm:text-[1.15rem] md:text-[1.18rem] lg:text-xl cursor-pointer flex items-center gap-2 sm:gap-2.5 md:gap-2.5 lg:gap-3 shadow-floating hover:brightness-85 transition-all"
		>
			Explore resources
			<Arrow class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 lg:size-9" />
		</a>
	</article>
</Layout>