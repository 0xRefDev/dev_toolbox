---
import Layout from "@layouts/Layout.astro";

const navBarOptions = ["Home", "How to collab", "Our Purpose"];
---

<Layout title="Dev Toolbox">
	<section
		class="notch-section rounded-4xl bg-dark-200/60"
		style="clip-path: polygon(
			0 0px,
			calc(50% - 150px) 0px,
			calc(50% - 145px) 2px,
			calc(50% + 145px) 2px,
			calc(50% + 150px) 0px,
			100% 0px,
			100% 100%,
			0 100%
		);"
	>
		<div class="notch-corner-right"></div>
	</section>
</Layout>

<style>
	.notch-section {
		position: relative;
		height: 100dvh;
		width: 100%;
		border: 1px solid rgba(255, 255, 255, 0.25);
		overflow: hidden;
		backdrop-filter: blur(5rem);
	}
	.notch-section::before {
		content: "";
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 280px;
		height: 35px;
		background: #0e0b0b;
		border-bottom-left-radius: 32px;
		border-bottom-right-radius: 32px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.25);
		z-index: 100;
	}

	.notch-section::after {
		content: "";
		position: absolute;
		top: 0;
		left: calc(50% - 140px - 13px);
		width: 15px;
		height: 15px;
		background-color: transparent;
		border-top-right-radius: 32px;
		border-right: 1px solid rgba(255, 255, 255, 0.1);
		box-shadow: 5px -5px 0 0 #0e0b0b;
		z-index: 100;
	}

	.notch-corner-right {
		position: absolute;
		top: 0;
		right: calc(50% - 140px - 13px);
		width: 15px;
		height: 15px;
		background-color: transparent;
		border-top-left-radius: 32px;
		box-shadow: -5px -5px 0 0 #0e0b0b;
		border-left: 1px solid rgba(255, 255, 255, 0.1);
		z-index: 100;
	}
</style>
