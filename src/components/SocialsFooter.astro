---
import GitHub from "@/icons/GitHub.astro";
import Instagram from "@/icons/Instagram.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Web from "@/icons/Web.astro";
---

<div class="flex w-full justify-center gap-4 py-4 text-purple-100">
  <a
    href=""
    class="bg-dark-100/40 shadow-xl rounded-full p-4 border border-white/20 hover:bg-dark-100/80 hover:-translate-y-0.5 transition-all"
  >
    <GitHub />
  </a>
  <a
    href=""
    class="bg-dark-100/40 shadow-xl rounded-full p-4 border border-white/20 hover:bg-dark-100/80 hover:-translate-y-0.5 transition-all"
  >
    <Instagram />
  </a>
  <a
    href=""
    class="bg-dark-100/40 shadow-xl rounded-full p-4 border border-white/20 hover:bg-dark-100/80 hover:-translate-y-0.5 transition-all"
  >
    <LinkedIn />
  </a>
  <a
    href=""
    class="bg-dark-100/40 shadow-xl rounded-full p-4 border border-white/20 hover:bg-dark-100/80 hover:-translate-y-0.5 transition-all"
  >
    <Web />
  </a>
</div>
