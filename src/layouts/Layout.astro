---
import "@/styles/global.css";

import BlueBlob from "@/assets/blobs/blue-blob.astro";
import YellowBlob from "@/assets/blobs/yellow-blob.astro";

import { PurposeModal } from "@/components/PurposeModal.jsx";

const { title, hideContent } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Dev Toolbox" />
		<meta name="author" content="0xRef" />
		<meta
			name="keywords"
			content="Dev Toolbox, 0xRef, DevToolbox, icons, images, videos, svg icons, background generator, libraries, tools, dev tools"
		/>

		<meta name="theme-color" content="#0E0B0B" />
		<meta name="msapplication-navbutton-color" content="#0E0B0B" />
		<meta name="apple-mobile-web-app-status-bar-style" content="#0E0B0B" />
		<meta name="apple-mobile-web-app-title" content="Dev Toolbox" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@0xRef" />
		<meta name="twitter:title" content="Dev Toolbox" />
		<meta name="twitter:description" content="Dev Toolbox" />
		<meta
			name="twitter:image"
			content="https://devtoolbox.0xref.dev/og-image.png"
		/>

		<meta name="og:title" content="Dev Toolbox" />
		<meta name="og:description" content="Dev Toolbox" />
		<meta name="og:image" content="https://devtoolbox.0xref.dev/og-image.png" />
		<meta name="og:type" content="website" />
		<meta name="og:url" content="https://devtoolbox.0xref.dev/" />
		<meta name="og:site_name" content="Dev Toolbox" />
		<meta name="og:locale" content="en_US" />
		<title>{title}</title>
	</head>
	<body class={hideContent ? "overflow-hidden pt-0" : "pt-0"}>
		<main
			class={`bg-gray-300 min-h-dvh relative ${hideContent ? "overflow-hidden" : "overflow-x-hidden"} flex justify-center px-2 lg:px-16 pb-0 ${hideContent ? "pt-1 md:pt-12" : "pt-4"}`}
		>
			<BlueBlob />
			<YellowBlob />
			<section
				class={`sm:w-full notch-section rounded-t-4xl bg-dark-200/60 p-4 ${hideContent ? "mt-3 sm:mt-5 min-h-dvh" : "min-h-340"}`}
				style="clip-path: polygon(
			0 0px,
			calc(50% - 150px) 0.5px,
			calc(50% - 145px) 2px,
			calc(50% + 145px) 2px,
			calc(50% + 150px) 0.5px,
			100% 0px,
			100% 100%,
			0 100%
		);"
			>
				<div class="notch-corner-right"></div>
				<slot />
			</section>
			<PurposeModal client:only="react" />
		</main>
	</body>
</html>

<style>
	.notch-section {
		position: relative;
		width: 100%;
		border: 1px solid rgba(255, 255, 255, 0.25);
		overflow: hidden;
		backdrop-filter: blur(5rem);
	}

	@media (max-width: 639px) {
		.notch-section::before {
			content: "";
			position: absolute;
			top: 0;
			left: 50%;
			transform: translateX(-50%);
			width: 200px;
			height: 30px;
			background: #0e0b0b;
			border-bottom: 1px solid rgba(255, 255, 255, 0.25);
			z-index: 100;
		}
		.notch-section::after {
			content: "";
			position: absolute;
			top: 0;
			left: calc(50% - 100px - 10px);
			width: 12px;
			height: 12px;
			background-color: transparent;
			border-right: 1px solid rgba(255, 255, 255, 0);
			box-shadow: 5px -5px 0 0 transparent;
			z-index: 100;
		}
		.notch-corner-right {
			position: absolute;
			top: 0;
			right: calc(50% - 100px - 10px);
			width: 12px;
			height: 12px;
			background-color: transparent;
			box-shadow: -5px -5px 0 0 transparent;
			border-left: 1px solid rgba(255, 255, 255, 0);
			z-index: 100;
		}
	}

	/* Tablet (640px - 1023px) */
	@media (min-width: 640px) and (max-width: 1023px) {
		.notch-section::before {
			content: "";
			position: absolute;
			top: 0;
			left: 50%;
			transform: translateX(-50%);
			width: 240px;
			height: 33px;
			background: #0e0b0b;
			border-bottom: 1px solid rgba(255, 255, 255, 0.25);
			z-index: 100;
		}
		.notch-section::after {
			content: "";
			position: absolute;
			top: 0;
			left: calc(50% - 120px - 12px);
			width: 14px;
			height: 14px;
			background-color: transparent;
			border-right: 1px solid rgba(255, 255, 255, 0.1);
			box-shadow: 5px -5px 0 0 #0e0b0b;
			z-index: 100;
		}
		.notch-corner-right {
			position: absolute;
			top: 0;
			right: calc(50% - 120px - 12px);
			width: 14px;
			height: 14px;
			background-color: transparent;
			box-shadow: -5px -5px 0 0 #0e0b0b;
			border-left: 1px solid rgba(255, 255, 255, 0.1);
			z-index: 100;
		}
	}
</style>
